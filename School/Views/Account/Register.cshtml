@using School.Models;
@using School.ViewModels;
@model User;

@{
    Layout = "_LayoutReg";
}
<div class="container">
    <div class="reg">
        <h2>Регистрация</h2>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="row">
                <div class="accColumn">
                    <label>Логин:</label><br />
                    <label>Пароль:</label><br />
                    <label>Имя:</label><br />
                    <label>Фамилия:</label><br />
                    <label>Почта:</label>
                </div>
                <div class="accColumn">
                    <input type="text" asp-for="Login"><br />
                    <input type="text" asp-for="Pass"><br />
                    <input type="text" asp-for="FirstName"><br />
                    <input type="text" asp-for="LastName"><br />
                    <input type="text" asp-for="Mail"><br />
                </div>
            </div>
            <input type="submit" value="Регистрация" />
        </form>
        <br />
        <a asp-action="LogIn">Вход</a>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}