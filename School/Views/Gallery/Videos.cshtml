@using School.Models;
@using School.ViewModels;

@model BaseVM

<h2 style="margin-top:10px; margin-left:30px">Видео</h2>
@if (Model.UsrRole == "Администратор")
{
    <form id="AddPhotos" method="post" enctype="multipart/form-data" onsubmit="return event.preventDefault(), PostVids(this)" class="form" role="form">
        <div class="form-group row" style="margin-top:10px">
            <label class="col-md-12">Добавить видео в гелерею</label>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label class="btn btn-block btn-default">
                    Обзор <input style="display:none" id="Files" name="Files" class="form-control" onchange="PreviewVids()" type="file" multiple accept="video/*">
                </label>
            </div>
            <div class="col-md-2">
                <input type="button" class="btn btn-warning btn-block" onclick="clearVids()" value="Очистить">
            </div>
            <div class="col-md-1">
                <span id="imgCount" class="btn btn-info btn-block"><i class="fa fa-video"></i></span>
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-primary btn-block" value="Сохранить">
            </div>
        </div>
        <div class="form-group" id="preview">
            <table id="previewTable" class="table table-hover" style="margin:auto"></table>
        </div>

    </form>
}

<div class="vidPlayer row" style="margin-left:20px;">
</div>
