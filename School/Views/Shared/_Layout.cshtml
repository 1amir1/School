@using School.ViewModels;
@model BaseVM
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>


    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.min.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Follcray</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="News" asp-action="News">События</a></li>
                    <li><a asp-area="" asp-controller="Table" asp-action="Groups">Расписание</a></li>
                    <li><a asp-area="" asp-controller="Review" asp-action="ShowReviews">Отзывы</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Контакты</a></li>
                    @if (Model.LoggedIn)
                    {
                        @if (Model.UsrRole == "Администратор")
                        {
                            <li><a href="~/Accounts">Аккаунты</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="LogOut">Выход</a></li>
                        }
                        else
                        {
                            <li><a href="~/Accounts/@Model.UsrId">Аккаунт</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="LogOut">Выход</a></li>
                        }
                    }
                    else
                    {
                        <li><a href="~/Login">Авторизация</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />
    <div class="sidenav">
        <h2>Галерея</h2>
        <div>
            <a class="custLnk" href="~/Photos" style="font-size:18px">
                <img src="~/images/index/galLink_1.jpeg" height="150" style="width:80%;"><!--width="200" height="140"-->
                <p>Фотографии</p>
            </a>
        </div>
        <div>
            <a class="custLnk" href="~/Videos" style="font-size:18px">
                <img src="~/images/index/galLink_2.jpg" height="150" style="width:82%;">
                <p>Видео</p>
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>


    <div class="container" style="width:83%">
        <div class="cont" style="width:100%">
            @RenderBody()
        </div>


        <!--<hr />
        <footer>
            <p>&copy; 2020 - School</p>
        </footer>-->

    </div>
